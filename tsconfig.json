{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/@types",
    "typeRoots": ["dist/@types"]
  }
}
